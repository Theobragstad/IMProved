<%- include ('../partials/header') %>

<main>
  <div class="container">
    <div class="col">
      <%- include ('../partials/message') %>
    </div>
    <div class="text-center">
      <img  src="./img/logo.png" style="width:25%;padding-top:10vh;padding-bottom:2vh;">
      <h3>Log in</h3>
    </div>
    <div class="input-group mb-3 justify-content-center text-center">
      <form action="/login" method="POST">
        <div class="input-group mb-3">
          <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
        </div>

        <div class="input-group mb-3">
          <input type="password" class="form-control" name="password" id="password" placeholder="Password" name="current-password" autocomplete="current-password" required>
        </div>

        <button class="btn rounded-pill" style="background-color:#ecf8f8;color:#1fbebe;" type="">Log In</button>
      </form>       
    </div>

    <div class="text-center" style="padding-top:1vh;">
      <a href="/forgotPassword" class="btn rounded-pill" style="font-size:12px;background-color:#d8d8d8;color:#595959;">Forgot Password</a>
    </div>

    <div style="padding-bottom:22vh;">
      <%- include ('../partials/register') %>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>