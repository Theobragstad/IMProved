<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
  <div class="container text-center"  style="padding-bottom:10vh;">
    <h1 style="padding-top:2vh;">Your Teams</h1>
    <h6 style="color:#949494;padding-top:2vh;">Click on a team to view the details</h6>

    <div style="padding-bottom:20vh;">
      <% if(teams.length == 0) { %>
        <h4 style="padding-top:5vh;color:#ff8a8a;">You haven't joined any teams yet.<br>Join teams by going to the<a href="/sports"> sports </a>page.</h4>
      <% } else if(teams.length==1){ %>
        <em><%=teams.length%> team</em>
      <% } else {%>
        <em><%=teams.length%> teams</em>

        <% } %>

      <% teams.forEach(function(team) { 
          let hrefName="/team/" + team.teamid
          %>
          <div style="padding-top:3vh;">
            <a href= <%= hrefName %>  style="background-color:#1e90ff;color:white;" class="btn rounded-pill"><%= team.teamname %></a>
          </div>
      <% }); %>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>